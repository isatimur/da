{
  "manifest_version": 3,
  "name": "Quick Capture",
  "short_name": "QuickCap",
  "version": "1.1.0",
  "description": "Instant capture of thoughts, links, and notes with one click. Multi-language support.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Quick Capture"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "offline_enabled": true
}

